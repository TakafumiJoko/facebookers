<div class="col-md-4 col-md-offset-4">
  <div class="form-user style-1 rounded has-shadow-1"> 
    <div class="form-header text-center">
      <h2 class="form-header-title">User info</h2>
    </div>
    <div class="form-body">
      <%= form_for(@user) do |f| %>
        <%= render "shared/error_messages", model: f.object %>
        <div class="field">
          <label for="user_name">Name</label>
          <%= f.text_field :name, placeholder: "名前", id: "user_name" %>
        </div>
        <div class="field">
          <div class="user-edit-image">
            <label for="image">Image</label>
            <br />
          </div>
        </div>
        <div class="field">
          <%= f.attachment_field :profile_image, id: "edit-user-form" %>
        </div>
        <div class="field">
          <label for="introduction">Introduction</label>
          <%= f.text_area :introduction, id: "introduction" %>
        </div>
        <div class="actions">
          <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %> 
        </div>
      <% end %>
    </div>
  </div>
</div>
