<div class="col-xs-3">
<%= render 'shared/side_user', user: @user %>
<%= render 'shared/side_book' %>
</div>
<div class='col-xs-9'>
  <h2>Books</h2>

  <table class='table'>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to attachment_image_tag(@user, :profile_image, size: '80x80', fallback: "no_image.jpg") %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </table>
</div>