<div class='body'>
  <div class='container'>
    <p id='notice'></p>
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <label for="user_name">Name</label>
        <br />
        <%= f.text_field :name, autofocus: true, id: "user_name" %>
      </div>
      <div class="field">
        <label for="user_email">Email</label><br />
        <%= f.text_field :email, id: "user_email" %>
      </div>
      <div class="field">
        <label for="user_password">Password</label>
        <em>(6 characters minimum)</em>
        <br />
        <%= f.text_field :password, id: "user_password" %>
      </div>
      <div class="field">
        <label for="user_password_confirmation">Password confirmation</label>
        <br />
        <%= f.text_field :password_confirmation, id: "user_password_confirmation" %>
      </div>
      <%= f.submit "Sign up", class: "btn btn-success" %>
    <% end %>
    <a class="sign_in" href="/users/sign_in">Log in</a><br />
  </div>
</div>