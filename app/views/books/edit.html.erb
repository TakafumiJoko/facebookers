<%= form_for(@book) do |f| %>
<%= render "shared/error_messages", model: f.object %>
<div class='col-md-6 col-md-offset-3'>
  <h1>Editing Book</h1>
  <div class="field">
    <label>Title</label>
    <br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Opinion</label>
    <br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "Update Book" %>
  </div>
  <%= link_to "Show", book_path(params[:id]) %>
  <span>|</span>
  <%= link_to "Back", books_path %>
</div>
<% end %>