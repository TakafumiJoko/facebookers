<div class="col-xs-3">
<%= render 'shared/side_user', user: @user %>
<%= render 'shared/side_book' %>
</div>
  <div class='col-xs-9'>
		<h2>Book detail</h2>
    <table class='table'>
      <tr>
        <td><%= link_to attachment_image_tag(@user, :profile_image, size: '80x80', fallback: "no_image.jpg"), user_path(@user.id) %></td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @book.user_id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-warning" %></td>
        <% end %>
      </tr>
      <tr>
        <td><%= link_to @user.name, user_path(@user.id) %></td>
      </tr>
    </table>
  </div>